.pane
	&--skills
		& ^[0]__container // .pane__container
			> .list
				& ^[3..3]__item // .list__item
					+above($screen-xs)
						width 75%
						margin auto
						margin-top 4 * $spacing
						margin-bottom 4 * $spacing
						padding-left 0
						padding-right 0
						+above($screen-md)
								lost-column 1/3

				& ^[3..3]__description // .list__description
					+above($screen-xs)
						width 75%
						margin auto
