/* Variables
   ========================================================================== */
//== Colors
//
$gray-base ?=					#000
$gray-lighter ?=				lighten($gray-base, 15%)

$color-primary ?=				#e50000
$color-secondary ?=				#ffd400
$color-tertiary ?=				#0091ff



//== Scaffolding
//
$content-wrapper-bg ?=			#fff

$text-color ?=					$gray-base

$link-color ?=					invert($gray-base)
$link-hover-color ?=			$gray-base

$border-color ?=				$gray-base



//== Typography
//
$base-font-size ?=				16

$px ?=							unit(1 / $base-font-size, rem)

$regular-font-family ?=			"JeffScript", sans-serif
$headings-font-family ?=		"Bangers", sans-serif



//== Grid
//
$skew =							1.5deg
$spacing =						0.5%

// LostGrid
// https://github.com/peterramsing/lost
@lost gutter 20px



//== Media queries breakpoints
//

// Small screen / mobile
$screen-xs =					600px

// Small screen / tablet
$screen-sm =					850px

// Medium screen / desktop
$screen-md =					950px

// Large screen / wide desktop
$screen-lg =					1200px
